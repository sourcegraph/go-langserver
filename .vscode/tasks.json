{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "args": [
        "-c"
    ],
    "isShellCommand": true,
    "suppressTaskName": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "compile",
            "args": [
                "npm run compile"
            ],
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "test",
            "args": [
                "npm run test"
            ],
            "isTestCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        }
    ]
}