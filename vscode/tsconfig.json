{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"es6"
		],

		"module": "commonjs",
		"moduleResolution": "node",

		"outDir": "out",

		"sourceMap": true,
		"inlineSources": false,
		"declaration": true,
		"stripInternal": false,
		"preserveConstEnums": true,
		"noEmitOnError": true,
		"pretty": true,
		"inlineSourceMap": false,

		"removeComments": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src/**/*",
		"test/**/*"
	]
}
