{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es6"
        ],
        "outDir": "./out",

        "module": "commonjs",
        "moduleResolution": "node",

        "inlineSources": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "declaration": true,
        "stripInternal": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true
    },
    "include": [
        "src/**/*"
    ]
}