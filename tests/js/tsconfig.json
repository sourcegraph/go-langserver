{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "es2015", "es2015.promise"
        ],
        "module": "umd",
        "moduleResolution": "node",
        "inlineSources": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "declaration": true,
        "stripInternal": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "./out"
    }
}